<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProceduralWorldGeneration"
        xmlns:Generator="clr-namespace:ProceduralWorldGeneration.Generator" xmlns:DataStructure="clr-namespace:ProceduralWorldGeneration.DataStructure" xmlns:Input="clr-namespace:ProceduralWorldGeneration.Input" x:Class="ProceduralWorldGeneration.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Grid Margin="0,0,2,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="154*"/>
            <RowDefinition Height="69*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="294*"/>
            <ColumnDefinition Width="269*"/>
            <ColumnDefinition Width="227*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="WorldGenerationButton" Content="Generate" Margin="0,10,24,0" Grid.Column="2" Click="WorldGenerationButton_Click" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" Width="78"/>
        <TextBox x:Name="SeedTextBox" Margin="0,90,10,0" TextWrapping="Wrap" Text="{Binding RandomSeed}" SpellCheck.IsEnabled="True" Grid.Column="2" Height="22" VerticalAlignment="Top" HorizontalAlignment="Right" Width="130"/>
        <Label x:Name="SeedLabel" Content="Seed:" Margin="0,86,147,0" Grid.Column="2" HorizontalAlignment="Right" Width="47" Height="26" VerticalAlignment="Top"/>
        <RichTextBox x:Name="GenerationLog" Height="207" VerticalAlignment="Top" Grid.ColumnSpan="3" Grid.Row="1">
            <FlowDocument>
                <Paragraph>
                    <Run/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <ListBox x:Name="ElementListView" Margin="10" ItemsSource="{Binding GeneratedWorld.ElementCollection}" SelectionChanged="ElementListView_SelectionChanged">
            <ListBox.DataContext>
                <Generator:WorldGenerator/>
            </ListBox.DataContext>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ListBox x:Name="ChildrenElementListBox" Grid.Column="1" Margin="10,272,10,10" ItemsSource="{Binding GeneratedWorld.ElementCollection/ChildElements}">
            <ListBox.DataContext>
                <Generator:WorldGenerator/>
            </ListBox.DataContext>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock x:Name="textBlock1" Grid.Column="1" HorizontalAlignment="Left" Margin="10,251,0,0" TextWrapping="Wrap" Text="Children Element" VerticalAlignment="Top"/>
        <StackPanel Grid.Column="1" HorizontalAlignment="Left" Height="100" Margin="10,30,0,0" VerticalAlignment="Top" Width="100">
            <TextBlock x:Name="NameTextBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Name: " VerticalAlignment="Top"/>
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Size:" VerticalAlignment="Top"/>
            <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Parent:" VerticalAlignment="Top"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="100" Margin="115,30,0,0" VerticalAlignment="Top" Width="100" Grid.Column="1">
            <TextBlock x:Name="NameDisplayTextBlock" TextWrapping="Wrap" VerticalAlignment="Top" Text="                               "/>
            <TextBlock x:Name="SizeDisplayTextBlock" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <TextBlock x:Name="ParentNameDisplayTextBlock" TextWrapping="Wrap" VerticalAlignment="Top"/>
        </StackPanel>
    </Grid>
</Window>
