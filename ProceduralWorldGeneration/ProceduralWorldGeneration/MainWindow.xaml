<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProceduralWorldGeneration"
        xmlns:Generator="clr-namespace:ProceduralWorldGeneration.Generator" xmlns:DataStructure="clr-namespace:ProceduralWorldGeneration.DataStructure" x:Class="ProceduralWorldGeneration.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Grid Margin="0,0,2,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="154*"/>
            <RowDefinition Height="69*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="563*"/>
            <ColumnDefinition Width="227*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="WorldElementListBox" ItemsSource="{Binding GeneratedWorld.WorldElements}">
            <ListBox.DataContext>
                <Generator:WorldGenerator/>
            </ListBox.DataContext>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding GeneratedWorld.WorldElements.Name}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button x:Name="SelectButton" Content="Select" HorizontalAlignment="Right" Margin="0,401,24,0" VerticalAlignment="Top" Width="74" Grid.Column="1" Height="20"/>
        <Button x:Name="ReturnButton" Content="Return" HorizontalAlignment="Right" Margin="0,426,24,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Height="20" RenderTransformOrigin="0.433,0.375"/>
        <Button x:Name="WorldGenerationButton" Content="Generate" Margin="0,10,24,0" Grid.Column="1" Click="WorldGenerationButton_Click" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" Width="78"/>
        <TextBox x:Name="SeedTextBox" Margin="0,90,10,0" TextWrapping="Wrap" Text="{Binding RandomSeed}" SpellCheck.IsEnabled="True" Grid.Column="1" Height="22" VerticalAlignment="Top" HorizontalAlignment="Right" Width="130"/>
        <Label x:Name="SeedLabel" Content="Seed:" Margin="0,86,147,0" Grid.Column="1" HorizontalAlignment="Right" Width="47" Height="26" VerticalAlignment="Top"/>
        <RichTextBox x:Name="GenerationLog" Height="207" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Row="1">
            <FlowDocument>
                <Paragraph>
                    <Run/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
